# ==========================================
# WhatsApp Business API Configuration
# ==========================================

# احصل على هذه القيم من Facebook Developer Portal
# https://developers.facebook.com/apps/

# رمز الوصول (Access Token)
# من WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# معرف رقم الهاتف (Phone Number ID)  
# من WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# معرف حساب الأعمال (Business Account ID)
# من WhatsApp > API Setup
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345

# رمز التحقق من Webhook (اختر أي نص عشوائي)
# استخدم نفس القيمة عند تسجيل الـ Webhook في Facebook
WHATSAPP_WEBHOOK_TOKEN=my_secure_webhook_token_123456


# ==========================================
# Flask Application Configuration
# ==========================================

# مفتاح سري للتطبيق (غيّره إلى قيمة عشوائية)
FLASK_SECRET_KEY=your-secret-key-change-this-in-production

# وضع التشغيل (development أو production)
FLASK_ENV=development

# تفعيل وضع التصحيح (True أو False)
FLASK_DEBUG=True


# ==========================================
# Database Configuration (اختياري)
# ==========================================

# إذا كنت تستخدم قاعدة بيانات خارجية بدلاً من SQLite
# DATABASE_URL=sqlite:///instance/database.db
# DATABASE_URL=postgresql://user:password@localhost/dbname
# DATABASE_URL=mysql://user:password@localhost/dbname


